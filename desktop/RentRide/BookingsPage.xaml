<Page x:Class="RentRide.BookingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="BookingsPage"
      Background="#f3f9ff">

    <Border Background="#f6f9fc" 
            BorderBrush="#adb5bd" 
            BorderThickness="1" 
            CornerRadius="15">
        <Grid Margin="10">

            <TextBlock Text="All Bookings"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="#005c85"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,0"/>

            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="10,100,10,10">
                <StackPanel x:Name="BookingsStackPanel" Orientation="Vertical">
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
