<Page x:Class="RentRide.AddCarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Add Car Page">

    
    <Grid Background="#f3f9ff">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border Width="600" Padding="20" Background="White"
                    CornerRadius="10" BorderBrush="#dcdcdc" BorderThickness="1"
                    VerticalAlignment="Center" HorizontalAlignment="Center">

                <StackPanel VerticalAlignment="Center">
                    <!-- Header -->
                    <TextBlock Text="Add Car Details"
                               FontSize="25"
                               FontWeight="Bold"
                               Foreground="#005c85"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Brand -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Brand" Foreground="Black" FontWeight="Bold"/>
                        <TextBox x:Name="txtBrand" 
                                 Height="35" 
                                 Margin="0,5" 
                                 Padding="10,0,0,5"
                                 FontSize="14" 
                                 VerticalContentAlignment="Center">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="White" 
                                            BorderBrush="#cdcdcd" 
                                            BorderThickness="1" 
                                            CornerRadius="10">
                                        <ScrollViewer x:Name="PART_ContentHost" />
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>
                    </StackPanel>

                    <!-- Model -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Model" Foreground="Black" FontWeight="Bold"/>
                        <TextBox x:Name="txtModel" 
                                 Height="35" 
                                 Margin="0,5" 
                                 Padding="10,0,0,5"
                                 FontSize="14" 
                                 VerticalContentAlignment="Center">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="White" 
                                            BorderBrush="#cdcdcd" 
                                            BorderThickness="1" 
                                            CornerRadius="10">
                                        <ScrollViewer x:Name="PART_ContentHost" />
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>
                    </StackPanel>

                    <!-- Vehicle Number -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Vehicle Number" Foreground="Black" FontWeight="Bold"/>
                        <TextBox x:Name="txtVNumber" 
                                 Height="35" 
                                 Margin="0,5" 
                                 Padding="10,0,0,5"
                                 FontSize="14" 
                                 VerticalContentAlignment="Center">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="White" 
                                            BorderBrush="#cdcdcd" 
                                            BorderThickness="1" 
                                            CornerRadius="10">
                                        <ScrollViewer x:Name="PART_ContentHost" />
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>
                    </StackPanel>

                    <!-- Color -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Color" Foreground="Black" FontWeight="Bold"/>
                        <TextBox x:Name="txtColor" 
                                 Height="35" 
                                 Margin="0,5" 
                                 Padding="10,0,0,5"
                                 FontSize="14" 
                                 VerticalContentAlignment="Center">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="White" 
                                            BorderBrush="#cdcdcd" 
                                            BorderThickness="1" 
                                            CornerRadius="10">
                                        <ScrollViewer x:Name="PART_ContentHost" />
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>
                    </StackPanel>

                    <!-- Location -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Location" Foreground="Black" FontWeight="Bold"/>
                        <TextBox x:Name="txtLocation" 
                                 Height="35" 
                                 Margin="0,5" 
                                 Padding="10,0,0,5"
                                 FontSize="14" 
                                 VerticalContentAlignment="Center">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="White" 
                                            BorderBrush="#cdcdcd" 
                                            BorderThickness="1" 
                                            CornerRadius="10">
                                        <ScrollViewer x:Name="PART_ContentHost" />
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>
                    </StackPanel>

                    <!-- Price -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Price" Foreground="Black" FontWeight="Bold"/>
                        <TextBox x:Name="txtPrice" 
                                 Height="35" 
                                 Margin="0,5" 
                                 Padding="10,0,0,5"
                                 FontSize="14" 
                                 VerticalContentAlignment="Center">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="White" 
                                            BorderBrush="#cdcdcd" 
                                            BorderThickness="1" 
                                            CornerRadius="10">
                                        <ScrollViewer x:Name="PART_ContentHost" />
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>
                    </StackPanel>


                    <!-- Car Image -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Car Image" Foreground="Black" FontWeight="Bold"/>
                        <Button x:Name="btnChooseFile" 
                                    Content="Choose File" 
                                    Width="300" 
                                    Height="35" 
                                    Background="#007bff" 
                                    Foreground="White" 
                                    FontWeight="Bold" 
                                    FontSize="14" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center" 
                                    BorderBrush="#007bff" 
                                    BorderThickness="1" 
                                    Click="ChooseImage_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="#4285F4"
                                                CornerRadius="6"
                                                BorderThickness="0"
                                                Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                        </Button>
                        <TextBlock x:Name="txtImagePath" Foreground="Gray" FontSize="12" Margin="0,10"/>
                        <Image x:Name="imgPreview" Height="100" Width="150" Margin="0,10" Visibility="Hidden"/>
                    </StackPanel>

                    <!-- Add Button -->
                    <Button Content="Add Car"
                            Foreground="White"
                            FontWeight="Bold"
                            Padding="20"
                            Height="40"
                            Margin="0,10,0,0"
                            Cursor="Hand"
                            FontSize="15"
                            Click="SaveCar_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#4285F4"
                                        CornerRadius="10"
                                        BorderThickness="0"
                                        Padding="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

            </Border>
        </ScrollViewer>
    </Grid>
</Page>
